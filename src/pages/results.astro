---
import Layout from '../layouts/Layout.astro'
import PagespeedResults from '../components/PagespeedResults.tsx'
import GridContainer from '../layouts/GridContainer.astro'

const web_page_url = Astro.url.searchParams.get('web_page_url') || ''
const current_conversion_rate = Astro.url.searchParams.get('current_conversion_rate') || '2'
const current_monthly_traffic = Astro.url.searchParams.get('current_monthly_traffic') || '1650'
const current_conversion_value = Astro.url.searchParams.get('current_conversion_value') || '42'
const strategy = Astro.url.searchParams.get('strategy') || 'mobile'
---

<Layout
	title="Free CRO Calculator"
	description="Free Conversion rate optimization calculator to see how many customers you are losing due to underperforming pages."
>
	<GridContainer>
		<form class="col-span-3 place-content-end h-full">
			<div class="xs:space-y-4 space-y-2">
				<div class="">
					<h1
						class="xs:text-3xl w-full text-balance text-center text-xl font-semibold text-white md:text-4xl"
					>
						Google Core Web Vitals ROI Calculator
					</h1>
					<p
						class="xs:text-sm mt-1 w-full text-balance text-center text-xs text-gray-200 md:text-lg"
					>
						Find out how much money you are losing due to slow loading pages.
					</p>
				</div>

				<div class="">
					<div class="xs:gap-x-4 xs:gap-y-4 grid grid-cols-8 gap-x-1 gap-y-2">
						<div class="col-span-full">
							<label
								for="web_page_url"
								class="xs:text-sm block text-xs font-medium leading-6 text-white"
								>Landing page URL</label
							>
							<div class="mt-2">
								<input
									type="text"
									name="web_page_url"
									id="web_page_url"
									autocomplete="url"
									required
									placeholder="https://example.com/landing-page"
									value={web_page_url}
									class="block w-full rounded-md border-0 bg-white/10 py-1.5 text-white shadow-sm ring-1 ring-inset ring-black placeholder-white/60 focus:ring-2 focus:ring-inset focus:ring-contrast sm:text-sm sm:leading-6"
								/>
							</div>
						</div>
						<div class="xs:col-span-4 col-span-4 sm:col-span-2">
							<label
								for="current_conversion_rate"
								class="xs:text-sm block text-xs font-medium leading-6 text-white"
								>Conversion rate</label
							>
							<div class="relative mt-2 rounded-md shadow-sm">
								<input
									type="text"
									min="0"
									max="100"
									step="1"
									placeholder="0"
									name="current_conversion_rate"
									id="current_conversion_rate"
									aria-describedby="current_conversion_rate"
									autocomplete="current_conversion_rate"
									value={current_conversion_rate}
									class="block w-full rounded-md border-0 bg-white/10 py-1.5 pr-8 text-white shadow-sm ring-1 ring-inset ring-black placeholder-white/60 focus:ring-2 focus:ring-inset focus:ring-contrast sm:text-sm sm:leading-6"
								/>
								<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
									<span class="text-white sm:text-sm">&#37;</span>
								</div>
							</div>
						</div>

						<div class="xs:col-span-4 col-span-4 sm:col-span-2">
							<label
								for="strategy"
								class="xs:text-sm block text-xs font-medium leading-6 text-white">Device</label
							>
							<div class="mt-2">
								<select
									id="strategy"
									name="strategy"
									autocomplete="device"
									class="block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-contrast sm:text-sm sm:leading-6 [&_*]:text-black"
								>
									<option value="mobile" selected={strategy === 'mobile'}>Mobile</option>
									<option value="desktop" selected={strategy === 'desktop'}>Desktop</option>
								</select>
							</div>
						</div>

						<div class="xs:col-span-4 col-span-full sm:col-span-2">
							<label
								for="current_conversion_value"
								class="xs:text-sm block text-xs font-medium leading-6 text-white"
								>Conversion value</label
							>
							<div class="relative mt-2 rounded-md shadow-sm">
								<div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
									<span class="text-white sm:text-sm">$</span>
								</div>
								<input
									type="text"
									name="current_conversion_value"
									id="current_conversion_value"
									class="block w-full rounded-md border-0 bg-white/10 py-1.5 pl-7 pr-12 text-white shadow-sm ring-1 ring-inset ring-black placeholder-white/60 focus:ring-2 focus:ring-inset focus:ring-contrast sm:text-sm sm:leading-6"
									placeholder="0.00"
									aria-describedby="current_conversion_value"
									value={current_conversion_value}
								/>
								<div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
									<span class="text-white sm:text-sm" id="price-currency">USD</span>
								</div>
							</div>
						</div>

						<div class="xs:col-span-4 col-span-full sm:col-span-2">
							<label
								for="current_monthly_traffic"
								class="xs:text-sm block text-xs font-medium leading-6 text-white"
								>Monthly traffic</label
							>
							<div class="mt-2">
								<input
									type="text"
									placeholder="0"
									value={current_monthly_traffic}
									name="current_monthly_traffic"
									id="current_monthly_traffic"
									autocomplete="current_monthly_traffic"
									class="block w-full rounded-md border-0 bg-white/10 py-1.5 text-white shadow-sm ring-1 ring-inset ring-black placeholder-white/60 focus:ring-2 focus:ring-inset focus:ring-contrast sm:text-sm sm:leading-6"
								/>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="mt-4 flex items-center justify-end">
				<button
					type="submit"
					class="rounded-md border-contrast bg-white px-3 py-2 text-sm font-semibold text-background shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-contrast"
					>Calculate</button
				>
			</div>
		</form>
		<PagespeedResults
			client:only="solid-js"
			web_page_url={web_page_url}
			strategy={strategy}
			current_conversion_value={current_conversion_value}
			current_monthly_traffic={current_monthly_traffic}
			current_conversion_rate={current_conversion_rate}
		/>
	</GridContainer>
</Layout>
